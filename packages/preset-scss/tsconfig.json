{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": ["jest", "node"],
    "lib": ["es2017", "dom"],
    "strict": false,
    "noUnusedLocals": true,
    "outDir": "dist"
  },
  "include": ["src/*"],
  "exclude": ["__tests__/**/*", "__int_tests__/**/*"]
}
