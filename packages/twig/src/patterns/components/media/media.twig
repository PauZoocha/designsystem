{#
  MEDIA COMPONENT
#}

<figure class="image {{prefix}}--media" data-prefix="{{prefix}}"">
  {% if video.hasvideo == "true" %}
    {% include "@components/media/video.twig" with {
      alt: alt,
      controls: video.controls,
      prefix: prefix,
      src: video.src,
      tracks: video.tracks,
      url: url
    } %}
  {% else %}
  <div class="image {{prefix}}--media--wrapper">
    <picture class="{{prefix}}--media--img">
      {% for img in url|reverse|slice(0,-1) %}
      <source srcset="{{img.src}}" media="(min-width: {{img.breakpoint}}px)">
      {% endfor %}
      <img src="{{url|reverse|last.src}}" alt="{{alt}}">
    </picture>
    {% if credit %}
    <span class="{{prefix}}--credit">
      <span class="{{prefix}}--credit--label">{{credit}}</span>
    </span>
    {% endif %}
  </div>
  {% endif %}
  <figcaption class="{{prefix}}--media--caption">{{caption}}</figcaption>
</figure>
