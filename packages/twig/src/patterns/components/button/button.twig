{#
  BUTTON COMPONENT
#}
{% if url %}
  <a class="{{prefix}}--button ilo--button--{{size}} {{prefix}}--button--{{type}}" href="{{url}}" {% if target %}target="{{target}}" rel="noopener noreferrer"{% endif %}>
    <span class="link__label">{{label}}</span>
  </a>
{% else %}
  <button class="{{prefix}}--button ilo--button--{{size}} {{prefix}}--button--{{type}}" {% if kind %}type="{{kind}}"{% endif %}>
    <span class="button__label">{{label}}</span>
  </button>
{% endif %}
