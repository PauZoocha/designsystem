{#
  NAVIGATION COMPONENT
#}
<header class="{{prefix}}--header">
  <div class="{{prefix}}--header--utility-bar">
    <div class="{{prefix}}--header--language-switcher">
      Language
    </div>
  </div>
  <div class="{{prefix}}--header--logo-bar">
    <a href="/" class="{{prefix}}--header--logo-link">
      <img class="{{prefix}}--header--logo" src="" alt="">
    </a>
    <p class="{{prefix}}--header--logo-tagline">
      Advancing social justice, promoting decent work
      <span class="{{prefix}}--header--logo-tagline--small">ILO is a specialized agency of the United Nations</span>
    </p>
  </div>
  <div class="{{prefix}}--header--navigation">
    <div class="{{prefix}}--header--nav">
      <nav class="{{prefix}}--nav" aria-labelledby="primary-navigation">
        <h2 class="{{prefix}}--nav--label" id="primary-navigation">Primary nav list</h2>
        <ul class="{{prefix}}--nav--set">
          <li class="{{prefix}}--nav--items">
            <a href="https://www.google.com/search?q=topics" class="{{prefix}}--nav--link">Topics</a>
          </li>
          <li class="{{prefix}}--nav--items">
            <a href="https://www.google.com/search?q=Countries" class="{{prefix}}--nav--link">Countries</a>
          </li>
          <li class="{{prefix}}--nav--items">
            <a href="https://www.google.com/search?q=Standards" class="{{prefix}}--nav--link">Standards</a>
          </li>
          <li class="{{prefix}}--nav--items">
            <a href="https://www.google.com/search?q=Statistics" class="{{prefix}}--nav--link">Statistics</a>
          </li>
          <li class="{{prefix}}--nav--items">
            <a href="https://www.google.com/search?q=About" class="{{prefix}}--nav--link">About</a>
          </li>
          <li class="{{prefix}}--nav--items">
            <button class="{{prefix}}--nav--trigger">More</button>
          </li>
        </ul>
      </nav>
      <div class="{{prefix}}--search">
      </div>
    </div>
    <nav class="{{prefix}}--header--subnav" aria-labelledby="secondary-navigation">
      <h2 class="{{prefix}}--nav--label" id="secondary-navigation">Secondary nav list</h2>
      <ul class="{{prefix}}--subnav--set">
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=News" class="{{prefix}}--subnav--link">News</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=meeting+events" class="{{prefix}}--subnav--link">Meeting &amp; Events</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=Publications" class="{{prefix}}--subnav--link">Publications</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=Projects" class="{{prefix}}--subnav--link">Projects</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=Partners" class="{{prefix}}--subnav--link">Partners</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=Industries+Sectors" class="{{prefix}}--subnav--link">Industries &amp; Sectors</a>
        </li>
        <li class="{{prefix}}--subnav--items">
          <a href="https://www.google.com/search?q=About+the+ilo" class="{{prefix}}--subnav--link">About the ILO</a>
        </li>
      </ul>
    </nav>
    <div class="{{prefix}}--header--search-box">
      {# search box #}
    </div>
  </div>
</header>
