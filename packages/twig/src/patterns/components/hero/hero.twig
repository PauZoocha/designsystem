{#
  HERO COMPONENT
#}

<div class"{{prefix}}--hero {{prefix}}--hero--{{theme}} {{prefix}}--hero--{{types}} {% if image %}{{prefix}}--hero--image{% endif %}">
  {% include "@components/image/image.twig" with {
    alt: image.alt,
    caption: image.caption,
    credit: image.credit,
    url: image.url,
  } only %}
  <div class="{{prefix}}--hero-card {{prefix}}--hero-card--{{heroCard.alignment}} {{prefix}}--hero-card--{{theme}} {{prefix}}--hero-card--{{types}}">
    {% if heroCard.eyebrow %}
      <p class="{{ prefix }}--hero-card--eyebrow">{{ heroCard.eyebrow }}</p>
    {% endif %}
    {% if heroCard.title %}
      <h2 class="{{ prefix }}--hero-card--title">{{ heroCard.title }}</h2>
    {% endif %}
    {% if heroCard.datecopy %}
      <p class="{{ prefix }}--hero-card--datecopy">{{ heroCard.datecopy }}</p>
    {% endif %}
    {% if heroCard.intro %}
      <p class="{{ prefix }}--hero-card--intro">{{ heroCard.intro }}</p>
    {% endif %}

    <ul class="{{ prefix }}--hero-card--list">
      {% for item in heroCard.socials %}
        <li class="{{ prefix }}--hero-card--list--item">
          <a
            class="{{ prefix }}--hero-card--link icon icon--{{ item.icon }}"
            href={{ item.url }}
            title={{ item.label }}
          >
            {{ item.label }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>