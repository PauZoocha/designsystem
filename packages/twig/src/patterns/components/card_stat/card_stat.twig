{#
  STAT CARD COMPONENT
#}
<div class="{{prefix}}--card {{prefix}}--card__type__stat {{prefix}}--card__color__{{color}}">
  <div class="{{prefix}}--card--wrap">
    <div class="{{prefix}}--card--content">
      {% if title %}
        <h5 class="{{prefix}}--card--title">{{title}}</h5>
      {% endif %}
      {% if intro %}
        <p class="{{prefix}}--card--intro">{{intro}}</p>
      {% endif %}
      {% if source %}
        {% include "@components/link/link.twig" with {
          theme: theme,
          url: source.url,
          label: source.label,
          prefix: prefix
        } %}
      {% endif %}
    </div>
  </div>
</div>
