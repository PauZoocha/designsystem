{#
  CARDGROUP COMPONENT
#}
<div class="{{prefix}}--cardgroup {{prefix}}--cardgroup--{{cardcount}}">
  <div class="{{prefix}}--cardgroup--inner">
    {% for card in group %}
      {% include "@components/card/card.twig" with {
        title: card.title,
        image: card.image,
        intro: card.intro,
        eyebrow: card.eyebrow,
        date: card.date,
        dataset: card.dataset,
        link: card.link,
        profile: card.profile,
        eventdate: card.eventdate,
        cta: card.cta,
        source: card.source,
        list: card.list,
        linklist: card.linklist,
        color: card.color,
        imageAlt: card.imageAlt,
        loading: card.loading,
        prefix: prefix,
        theme: theme,
        cornercut: cornercut,
        alignment: alignment,
        variant: variant,
        type: type,
        size: size
      } only %}
    {% endfor %}

    {% if cta %}
    <div class="{{prefix}}--cardgroup--button-wrap">
      <a
        class="{{prefix}}--button {{prefix}}--button--medium {{prefix}}--button--secondary"
        href="{{cta.url}}"
      >
        <span class="button__label">{{ cta.label }}</span>
      </a>
    </div>
    {% endif %}
  </div>
</div>
