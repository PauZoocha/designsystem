{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "storybook-static/",
    "node_modules/",
    "lib/",
    "src/stories/"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": [
      "./tsconfig.json",
      "./rollup.config.js"
    ]
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  }
}